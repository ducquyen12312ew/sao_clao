  <style>
/* ========== LYRICS PANEL STYLES ========== */
.lyrics-panel {
  margin-top: 24px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: 16px;
  overflow: hidden;
  animation: slideDown 0.3s ease-out;
}

.lyrics-panel[hidden] {
  display: none;
}

.lyrics-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid var(--border-color);
  background: var(--bg-secondary);
}

.lyrics-title {
  display: flex;
  align-items: center;
  gap: 10px;
  font-weight: 700;
  font-size: 16px;
  color: var(--text-primary);
}

.lyrics-title i {
  color: #9333ea;
  font-size: 18px;
}

.lyrics-tools {
  display: flex;
  gap: 8px;
}

.lyrics-btn {
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-secondary);
  cursor: pointer;
  padding: 8px 12px;
  border-radius: 8px;
  transition: all 0.2s;
  font-size: 14px;
}

.lyrics-btn:hover {
  background: var(--bg-secondary);
  color: var(--text-primary);
  border-color: #9333ea;
}

.lyrics-btn.small {
  padding: 6px 10px;
  font-size: 16px;
}

.lyrics-body {
  padding: 20px;
  max-height: 400px;
  overflow-y: auto;
  scroll-behavior: smooth;
}

.lyrics-body::-webkit-scrollbar {
  width: 8px;
}

.lyrics-body::-webkit-scrollbar-track {
  background: var(--bg-secondary);
  border-radius: 4px;
}

.lyrics-body::-webkit-scrollbar-thumb {
  background: var(--border-color);
  border-radius: 4px;
}

.lyrics-body::-webkit-scrollbar-thumb:hover {
  background: #9333ea;
}

.lyrics-lines {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.lyric-line {
  font-size: 18px;
  line-height: 1.6;
  color: var(--text-secondary);
  transition: all 0.3s ease;
  padding: 8px 12px;
  border-radius: 8px;
  opacity: 0.5;
}

.lyric-line.passed {
  opacity: 0.3;
  color: var(--text-secondary);
  font-size: 16px;
}

.lyric-line.active {
  color: #9333ea;
  font-weight: 700;
  font-size: 24px;
  opacity: 1;
  background: rgba(147, 51, 234, 0.1);
  border-left: 4px solid #9333ea;
  padding-left: 16px;
  transform: translateX(4px);
}

.lyrics-empty {
  text-align: center;
  color: var(--text-secondary);
  padding: 40px 20px;
  font-size: 15px;
}

.lyric-toggle-btn {
  background: rgba(147, 51, 234, 0.1);
  border: 1px solid rgba(147, 51, 234, 0.3);
}

.lyric-toggle-btn:hover {
  background: rgba(147, 51, 234, 0.2);
  border-color: rgba(147, 51, 234, 0.5);
}

.lyric-toggle-btn i {
  color: #9333ea;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
  </style>
