function initActions() {
  const likeBtn = document.getElementById('likeBtn');
  const addToQueueBtn = document.getElementById('addToQueueBtn');
  const submitComment = document.getElementById('submitComment');
  const commentInput = document.getElementById('commentInput');
  
  if (likeBtn) {
    likeBtn.addEventListener('click', async function() {
      const trackId = this.dataset.trackId;
      try {
        const res = await fetch(`/api/tracks/${trackId}/like`, { method: 'POST' });
        const data = await res.json();
        if (data.success) {
          this.dataset.liked = data.liked ? 'true' : 'false';
          this.classList.toggle('liked', data.liked);
          const icon = this.querySelector('i');
          icon.className = data.liked ? 'fa-solid fa-heart' : 'fa-regular fa-heart';
          document.getElementById('likeCount').textContent = data.likes;
        }
      } catch (err) {
        console.error(err);
      }
    });
  }
  
  if (addToQueueBtn) {
    addToQueueBtn.addEventListener('click', () => {
      if (window.player) {
        window.player.addToQueue(trackData);
      }
    });
  }
  
  if (submitComment && commentInput) {
    submitComment.addEventListener('click', async function() {
      const text = commentInput.value.trim();
      if (!text) return;
      
      try {
        const res = await fetch(`/api/tracks/${trackData.id}/comments`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ text })
        });
        
        const data = await res.json();
        if (data.success) {
          location.reload();
        }
      } catch (err) {
        console.error(err);
      }
    });
    
    commentInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        submitComment.click();
      }
    });
  }
}

