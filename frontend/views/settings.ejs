<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - SAOCLAO</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/public/css/settings.css">
</head>
<body>
  <header class="header">
    <a href="/" class="logo">
      <img src="/public/img/saoclao.png" alt="SAOCLAO" onerror="this.style.display='none'">
    </a>
  </header>
  
  <div class="container">
    <h1 class="page-title">Settings</h1>
    
    <% if (locals.flash) { %>
      <div class="alert alert-<%= flash.type %>">
        <%= flash.message %>
      </div>
    <% } %>
    
    <form action="/settings/profile" method="POST" enctype="multipart/form-data">
      <div class="form-card">
        <h2 class="section-title">Profile Information</h2>
        
        <div class="form-group">
          <label class="form-label">Avatar</label>
          <div class="avatar-upload">
            <div class="avatar-preview" id="avatarPreview">
              <% if (user.avatarUrl) { %>
                <img src="<%= user.avatarUrl %>" alt="Avatar">
              <% } else { %>
                <%= user.username.charAt(0).toUpperCase() %>
              <% } %>
            </div>
            <div>
              <input type="file" name="avatar" id="avatarInput" accept="image/*" style="display:none" onchange="previewAvatar(this)">
              <button type="button" class="upload-btn" onclick="document.getElementById('avatarInput').click()">
                <i class="fa-solid fa-upload"></i> Choose image
              </button>
              <p class="form-hint">JPG, PNG. Max 2MB</p>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <label class="form-label">Display Name</label>
          <input type="text" name="name" class="form-input" value="<%= user.name %>" required>
          <p class="form-hint">Your full name or display name</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Username</label>
          <input type="text" class="form-input" value="<%= user.username %>" disabled>
          <p class="form-hint">Username cannot be changed</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Bio</label>
          <textarea name="bio" class="form-textarea" maxlength="200" placeholder="Tell us about yourself..."><%= user.bio || '' %></textarea>
          <p class="form-hint">Max 200 characters</p>
        </div>
      </div>
      
      <div class="btn-group">
        <button type="submit" class="btn btn-primary">
          <i class="fa-solid fa-check"></i> Save changes
        </button>
        <button type="button" class="btn btn-secondary" onclick="window.location.href='/users/<%= user.username %>'">
          Cancel
        </button>
      </div>
    </form>
  </div>
  
  <script>
    // preview avatar
    function previewAvatar(input) {
      if (!input.files || !input.files[0]) return;
      const reader = new FileReader();
      reader.onload = e => {
        document.getElementById('avatarPreview').innerHTML =
          `<img src="${e.target.result}" alt="Preview">`;
      };
      reader.readAsDataURL(input.files[0]);
    }
  </script>
</body>
</html>
