<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= success ? 'Thành công' : 'Thất bại' %> - SAOCLAO Pro</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    * { box-sizing: border-box; }
    body { 
      margin: 0; 
      font-family: 'Inter', sans-serif; 
      background: #05060a; 
      color: #f7f9ff;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 24px;
    }
    
    .container {
      max-width: 500px;
      width: 100%;
      text-align: center;
    }

    .result-card {
      padding: 48px 32px;
      border-radius: 24px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(10px);
      box-shadow: 0 24px 60px rgba(0, 0, 0, 0.4);
    }

    .result-icon {
      font-size: 80px;
      margin-bottom: 24px;
      animation: popIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .success .result-icon {
      color: #8ef1c7;
    }

    .failed .result-icon {
      color: #ff3b30;
    }

    @keyframes popIn {
      0% { transform: scale(0); opacity: 0; }
      50% { transform: scale(1.1); }
      100% { transform: scale(1); opacity: 1; }
    }

    h1 {
      font-size: 32px;
      font-weight: 800;
      margin: 0 0 12px;
      letter-spacing: -0.5px;
    }

    .detail {
      font-size: 16px;
      color: #c8cedd;
      margin: 12px 0;
      line-height: 1.6;
    }

    .info-box {
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 12px;
      padding: 16px;
      margin: 24px 0;
      text-align: left;
    }

    .info-row {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      color: #9ba4b5;
      font-weight: 600;
    }

    .info-value {
      color: #f7f9ff;
      font-weight: 700;
    }

    .actions {
      display: flex;
      gap: 12px;
      margin-top: 24px;
      justify-content: center;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 14px 28px;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      font-weight: 700;
      text-decoration: none;
      transition: all 0.3s ease;
      font-size: 14px;
    }

    .btn-primary {
      background: linear-gradient(135deg, #8ef1c7, #9ea5ff);
      color: #040507;
      box-shadow: 0 10px 30px rgba(142, 241, 199, 0.4);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 40px rgba(142, 241, 199, 0.5);
    }

    .btn-secondary {
      background: rgba(255, 255, 255, 0.08);
      color: #f7f9ff;
      border: 1px solid rgba(255, 255, 255, 0.14);
    }

    .btn-secondary:hover {
      background: rgba(255, 255, 255, 0.12);
    }

    .timer {
      font-size: 14px;
      color: #9ba4b5;
      margin-top: 16px;
    }

    .timer-count {
      font-weight: 700;
      color: #8ef1c7;
    }

    .success {
      /* success styling */
    }

    .failed {
      /* failed styling */
    }

    @media (max-width: 480px) {
      .result-card {
        padding: 32px 24px;
      }

      h1 {
        font-size: 24px;
      }

      .result-icon {
        font-size: 60px;
      }

      .actions {
        flex-direction: column;
      }

      .btn {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="result-card <%= success ? 'success' : 'failed' %>">
      <div class="result-icon">
        <% if (success) { %>
          <i class="fa-solid fa-check-circle"></i>
        <% } else { %>
          <i class="fa-solid fa-times-circle"></i>
        <% } %>
      </div>

      <h1><%= message %></h1>

      <% if (detail) { %>
        <p class="detail"><%= detail %></p>
      <% } %>

      <% if (success && planExpiry) { %>
        <div class="info-box">
          <div class="info-row">
            <span class="info-label">Hạn Pro:</span>
            <span class="info-value"><%= planExpiry %></span>
          </div>
          <div class="info-row">
            <span class="info-label">Trạng thái:</span>
            <span class="info-value" style="color: #8ef1c7;">✓ Đã kích hoạt</span>
          </div>
        </div>
      <% } %>

      <% if (!success && responseCode) { %>
        <div class="info-box">
          <div class="info-row">
            <span class="info-label">Mã lỗi:</span>
            <span class="info-value"><%= responseCode %></span>
          </div>
          <div class="info-row">
            <span class="info-label">Thời gian:</span>
            <span class="info-value"><%= new Date().toLocaleString('vi-VN') %></span>
          </div>
        </div>
      <% } %>

      <div class="actions">
        <% if (success) { %>
          <a href="/home" class="btn btn-primary">
            <i class="fa-solid fa-house"></i> Về trang chủ
          </a>
        <% } else { %>
          <a href="/pro" class="btn btn-primary">
            <i class="fa-solid fa-redo"></i> Thử lại
          </a>
          <a href="/home" class="btn btn-secondary">
            <i class="fa-solid fa-times"></i> Hủy
          </a>
        <% } %>
      </div>

      <% if (success) { %>
        <div class="timer">
          Sẽ chuyển hướng sau <span class="timer-count">5</span> giây...
        </div>
      <% } %>
    </div>
  </div>

  <% if (success) { %>
    <script>
      let countdown = 5;
      const timer = document.querySelector('.timer-count');

      setInterval(() => {
        countdown--;
        if (timer) timer.textContent = countdown;

        if (countdown === 0) {
          window.location.href = '/home';
        }
      }, 1000);
    </script>
  <% } %>
</body>
</html>
