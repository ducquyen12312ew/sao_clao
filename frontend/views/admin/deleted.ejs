<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <!-- HEADER -->
    <header class="admin-header">
      <div class="header-left">
        <h1>DELETED TRACKS</h1>
        <div class="user-badge"><%= user.name %> - Administrator</div>
      </div>
      <div class="header-right">
        <a href="/admin/dashboard" class="btn-back">Dashboard</a>
      </div>
    </header>

    <!-- STATS BAR -->
    <div class="stats-bar">
      <div class="stat-item pending">
        <span class="stat-number"><%= stats.pending %></span>
        <span class="stat-label">Pending</span>
      </div>
      <div class="stat-item approved">
        <span class="stat-number"><%= stats.approved %></span>
        <span class="stat-label">Approved</span>
      </div>
      <div class="stat-item rejected">
        <span class="stat-number"><%= stats.rejected %></span>
        <span class="stat-label">Rejected</span>
      </div>
      <div class="stat-item deleted">
        <span class="stat-number"><%= stats.deleted %></span>
        <span class="stat-label">Deleted</span>
      </div>
      <div class="stat-item reports">
        <span class="stat-number"><%= stats.reports %></span>
        <span class="stat-label">Reports</span>
      </div>
    </div>

    <!-- CONTENT SECTION -->
    <div class="content-section" style="padding-top:40px;">
      <h2 class="section-title">Deleted Tracks (<%= tracks.length %>)</h2>
      
      <% if (tracks.length === 0) { %>
        <div class="empty-state">
          <i class="fa-solid fa-check-circle"></i>
          <p>Không có bài hát nào bị xóa</p>
        </div>
      <% } else { %>
        <div class="tracks-grid">
          <% tracks.forEach(track => { %>
            <div class="track-card deleted">
              <div class="track-cover">
                <img 
                  src="<%= track.coverUrl || 'https://images.unsplash.com/photo-1514525253161-7a46d19cd819?w=400' %>" 
                  alt="<%= track.title %>"
                >
                <div class="deleted-overlay">
                  <i class="fa-solid fa-trash"></i>
                  <span>Deleted</span>
                </div>
              </div>
              
              <div class="track-info">
                <h3 class="track-title"><%= track.title %></h3>
                <p class="track-artist"><%= track.artist %></p>
                <div class="track-meta">
                  <span class="uploader">
                    <% if (track.userId.avatarUrl) { %>
                      <img src="<%= track.userId.avatarUrl %>" class="uploader-avatar">
                    <% } %>
                    @<%= track.userId.username %>
                  </span>
                </div>
                <div class="deleted-info">
                  <i class="fa-regular fa-clock"></i>
                  Deleted: <%= new Date(track.deletedAt).toLocaleString('vi-VN') %>
                </div>
                <% if (track.reportCount > 0) { %>
                  <div class="track-warning">
                    <i class="fa-solid fa-flag"></i>
                    Had <%= track.reportCount %> report<%= track.reportCount > 1 ? 's' : '' %>
                  </div>
                <% } %>
              </div>
              
              <div class="track-actions">
                <button class="btn-action restore" onclick="restoreTrack('<%= track._id %>')">
                  <i class="fa-solid fa-rotate-left"></i>
                  Restore
                </button>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    async function restoreTrack(id) {
      if (!confirm('Khôi phục bài hát này?')) return;
      
      try {
        const res = await fetch(`/admin/tracks/${id}/restore`, { method: 'POST' });
        const data = await res.json();
        
        if (data.success) {
          location.reload();
        }
      } catch (err) {
        console.error(err);
        alert('Có lỗi xảy ra');
      }
    }
  </script>

  <style>
    .stat-item.reports .stat-number {
      color: var(--warning);
    }
    
    .track-card.deleted {
      opacity: 0.8;
    }
    
    .deleted-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.75);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 8px;
      color: var(--danger);
      font-weight: 700;
      font-size: 14px;
    }
    
    .deleted-overlay i {
      font-size: 32px;
    }
    
    .deleted-info {
      margin-top: 8px;
      padding: 6px 10px;
      background: rgba(255, 68, 68, 0.15);
      border: 1px solid rgba(255, 68, 68, 0.3);
      border-radius: 8px;
      font-size: 11px;
      color: var(--danger);
      display: flex;
      align-items: center;
      gap: 6px;
    }
    
    .track-warning {
      margin-top: 8px;
      padding: 6px 10px;
      background: rgba(255, 170, 0, 0.15);
      border: 1px solid rgba(255, 170, 0, 0.3);
      border-radius: 8px;
      font-size: 12px;
      color: var(--warning);
      display: flex;
      align-items: center;
      gap: 6px;
      font-weight: 600;
    }
    
    .btn-action.restore {
      background: rgba(29, 185, 84, 0.2);
      color: var(--success);
      flex: 1;
    }
    
    .btn-action.restore:hover {
      background: var(--success);
      color: #000;
    }
    
    .empty-state i {
      font-size: 64px;
      color: var(--success);
      margin-bottom: 16px;
    }
  </style>
</body>
</html>
