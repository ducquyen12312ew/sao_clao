<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <!-- HEADER -->
    <header class="admin-header">
      <div class="header-left">
        <h1>ADMIN DASHBOARD</h1>
        <div class="user-badge"><%= user.name %> - Administrator</div>
      </div>
      <div class="header-right">
        <a href="/admin/reports" class="btn-reports">
          <i class="fa-solid fa-flag"></i>
          Reports
          <% if (stats.reports > 0) { %>
            <span class="badge-count"><%= stats.reports %></span>
          <% } %>
        </a>
        <a href="/" class="btn-back">Back to Site</a>
        <form method="post" action="/logout" style="display:inline; margin: 0;">
          <button type="submit" class="btn-logout">Logout</button>
        </form>
      </div>
    </header>

    <!-- STATS BAR -->
    <div class="stats-bar">
      <div class="stat-item pending">
        <span class="stat-number"><%= stats.pending %></span>
        <span class="stat-label">Pending Tracks</span>
      </div>
      <div class="stat-item approved">
        <span class="stat-number"><%= stats.approved %></span>
        <span class="stat-label">Approved</span>
      </div>
      <div class="stat-item rejected">
        <span class="stat-number"><%= stats.rejected %></span>
        <span class="stat-label">Rejected</span>
      </div>
      <div class="stat-item deleted">
        <span class="stat-number"><%= stats.deleted %></span>
        <span class="stat-label">Deleted</span>
      </div>
      <div class="stat-item reports">
        <span class="stat-number"><%= stats.reports %></span>
        <span class="stat-label">Pending Reports</span>
      </div>
    </div>

    <!-- SEARCH SECTION -->
    <div class="search-section">
      <form action="/admin/search" method="get" class="search-form">
        <input 
          type="text" 
          name="q" 
          placeholder="Tìm kiếm bài hát, nghệ sĩ..." 
          class="search-input"
        >
        <select name="status" class="status-filter">
          <option value="all">Tất cả trạng thái</option>
          <option value="pending">Pending</option>
          <option value="approved">Approved</option>
          <option value="rejected">Rejected</option>
        </select>
        <button type="submit" class="btn-search">
          <i class="fa-solid fa-magnifying-glass"></i>
          Search
        </button>
      </form>
      <a href="/admin/deleted" class="btn-view-deleted">
        <i class="fa-solid fa-trash"></i>
        View Deleted
      </a>
    </div>

    <!-- CONTENT SECTION -->
    <div class="content-section">
      <h2 class="section-title">
        Pending Tracks (<%= tracks.length %>)
      </h2>
      
      <% if (tracks.length === 0) { %>
        <div class="empty-state">
          <i class="fa-solid fa-check-circle"></i>
          <p>Không có bài hát đang chờ duyệt</p>
        </div>
      <% } else { %>
        <div class="tracks-grid">
          <% tracks.forEach(track => { %>
            <div class="track-card">
              <div class="track-cover">
                <img 
                  src="<%= track.coverUrl || 'https://images.unsplash.com/photo-1514525253161-7a46d19cd819?w=400' %>" 
                  alt="<%= track.title %>"
                >
                <div class="play-overlay">
                  <a href="/track/<%= track._id %>" class="play-btn" target="_blank">
                    <i class="fa-solid fa-eye"></i>
                    View
                  </a>
                </div>
              </div>
              
              <div class="track-info">
                <h3 class="track-title"><%= track.title %></h3>
                <p class="track-artist"><%= track.artist %></p>
                <div class="track-meta">
                  <span class="uploader">
                    <% if (track.userId.avatarUrl) { %>
                      <img src="<%= track.userId.avatarUrl %>" class="uploader-avatar">
                    <% } %>
                    @<%= track.userId.username %>
                  </span>
                  <span class="track-date">
                    <%= new Date(track.createdAt).toLocaleDateString('vi-VN') %>
                  </span>
                </div>
                <% if (track.reportCount > 0) { %>
                  <div class="track-warning">
                    <i class="fa-solid fa-flag"></i>
                    <%= track.reportCount %> report<%= track.reportCount > 1 ? 's' : '' %>
                  </div>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <style>
    .btn-reports {
      position: relative;
      padding: 8px 20px;
      border-radius: 20px;
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      transition: all .2s;
      background: rgba(255, 170, 0, 0.15);
      color: var(--warning);
      border: 1px solid rgba(255, 170, 0, 0.3);
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .btn-reports:hover {
      background: rgba(255, 170, 0, 0.25);
    }
    
    .badge-count {
      background: var(--warning);
      color: #000;
      padding: 2px 8px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 700;
    }
    
    .stat-item.reports .stat-number {
      color: var(--warning);
    }
    
    .track-warning {
      margin-top: 8px;
      padding: 6px 10px;
      background: rgba(255, 170, 0, 0.15);
      border: 1px solid rgba(255, 170, 0, 0.3);
      border-radius: 8px;
      font-size: 12px;
      color: var(--warning);
      display: flex;
      align-items: center;
      gap: 6px;
      font-weight: 600;
    }
    
    .track-date {
      font-size: 11px;
      color: var(--text-secondary);
    }
    
    .empty-state i {
      font-size: 64px;
      color: var(--success);
      margin-bottom: 16px;
    }
  </style>
</body>
</html>
