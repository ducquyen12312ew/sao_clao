// Dropdown toggles
document.addEventListener('click', (e) => {
  const toggle = e.target.closest('.dropdown-toggle');
  const option = e.target.closest('.dropdown-option');

  if (toggle) {
    const targetId = toggle.dataset.target;
    document.querySelectorAll('.dropdown-menu').forEach(menu => {
      if (menu.id === targetId) {
        menu.classList.toggle('open');
      } else {
        menu.classList.remove('open');
      }
    });
    e.stopPropagation();
    return;
  }

  if (option) {
    const targetInput = option.dataset.input;
    const value = option.dataset.value;
    if (targetInput && value) {
      const input = document.getElementById(targetInput);
      if (input) input.value = value;
    }
    document.querySelectorAll('.dropdown-menu').forEach(menu => menu.classList.remove('open'));
    e.stopPropagation();
    return;
  }

  // Click outside closes dropdown
  document.querySelectorAll('.dropdown-menu').forEach(menu => menu.classList.remove('open'));
});

// Initialize on page load
window.addEventListener('DOMContentLoaded', () => {
  initResizeSidebar();
  initSearch();
  initEventListeners();
  
  if (userPlaylists && userPlaylists.length > 0) {
    console.log('Using server-side playlists:', userPlaylists.length);
    updatePlaylistSubmenu();
  } else {
    loadPlaylists();
  }
  
  const checkPlayer = setInterval(() => {
    if (window.player) {
      clearInterval(checkPlayer);
    }
  }, 100);
  
  setTimeout(() => clearInterval(checkPlayer), 5000);
});
