let aiPreviewInterval = null;
let aiPreviewLines = [];
let aiPreviewIndex = 0;

function renderPreview(lyrics, title) {
  const container = document.getElementById('aiPreviewLines');
  const titleEl = document.getElementById('aiPreviewTitle');
  if (titleEl) titleEl.textContent = title || 'Bản xem trước';
  if (!container) return;
  
  aiPreviewLines = (lyrics || '')
    .split(/\r?\n/)
    .map(l => l.trim())
    .filter(Boolean);
  aiPreviewIndex = 0;
  stopPreview();

  if (!aiPreviewLines.length) {
    container.innerHTML = '<p style="color: var(--text-secondary); text-align:center; margin:0;">Chưa có lời</p>';
    return;
  }

  container.innerHTML = aiPreviewLines.map((line, i) => 
    `<div class="ai-line" data-idx="${i}">${line}</div>`
  ).join('');
}

function highlightLine(idx) {
  document.querySelectorAll('.ai-line').forEach(el => {
    el.classList.remove('active', 'passed');
  });
  aiPreviewLines.forEach((_, i) => {
    const el = document.querySelector(`.ai-line[data-idx="${i}"]`);
    if (!el) return;
    if (i < idx) el.classList.add('passed');
    if (i === idx) el.classList.add('active');
  });
}

window.playPreview = function() {
  if (!aiPreviewLines.length) return;
  stopPreview();
  aiPreviewIndex = 0;
  highlightLine(aiPreviewIndex);
  aiPreviewInterval = setInterval(() => {
    aiPreviewIndex += 1;
    if (aiPreviewIndex >= aiPreviewLines.length) {
      stopPreview();
      return;
    }
    highlightLine(aiPreviewIndex);
  }, 1400);
};

window.stopPreview = function() {
  if (aiPreviewInterval) {
    clearInterval(aiPreviewInterval);
    aiPreviewInterval = null;
  }
};

function initEventListeners() {
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeCreatePlaylistModal();
      closeAIModal();
    }
  });
  
  const playlistNameInput = document.getElementById('playlistName');
  if (playlistNameInput) {
    playlistNameInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        createPlaylist();
      }
    });
  }
  
  // Context menu event delegation
  document.addEventListener('contextmenu', (e) => {
    const card = e.target.closest('.track-card');
    if (!card) return;
    
    e.preventDefault();
    e.stopPropagation();
    
    const id = card.dataset.trackId;
    const title = card.dataset.trackTitle;
    const artist = card.dataset.trackArtist;
    const cover = card.dataset.trackCover;
    const audioUrl = card.dataset.trackAudio;
    
    showContextMenu(e, id, title, artist, cover, audioUrl);
  });
}

