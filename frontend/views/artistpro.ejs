        ]
      }
    ]
  };
%>

<header class="topbar" aria-label="Top bar">
  <div class="wrap topbar__inner">
    <div class="topbar__left">Stand out with Artist Pro</div>
    <div class="topbar__right"><%= signedInAs %></div>
  </div>
</header>

<main>
  <!-- HERO -->
  <section class="hero" id="top">
    <div class="wrap hero__inner">
      <h1 class="hero__title">Reach more<br/>listeners.</h1>

      <div class="hero__sub">
        <div class="hero__dots" aria-hidden="true">
          <span></span><span></span><span></span><span></span><span></span>
        </div>
        <p class="hero__subtitle">
          Join millions of artists that use<br/>SoundCloud to get heard.
        </p>
      </div>

      <div class="hero__cta">
        <a class="btn btn--primary" href="#plans">Get Artist Pro</a>
        <a class="btn btn--secondary" href="#plans">See all plans</a>
      </div>

      <div class="benefits">
        <% benefitBlocks.forEach((b) => { %>
          <article class="benefit">
            <h3 class="benefit__title"><%= b.title %></h3>
            <p class="benefit__desc"><%= b.desc %></p>
          </article>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- PLANS -->
  <section class="plans" id="plans">
    <div class="wrap">
      <h2 class="sectionTitle">Available<br/>plans.</h2>

      <div class="planGrid">
        <% plans.forEach((p) => { %>
          <article class="planCard <%= p.isPro ? "planCard--pro" : "" %>">
            <% if (p.isPro) { %>
              <div class="proCorner" aria-hidden="true"></div>
              <div class="proLabel">MOST POPULAR</div>
            <% } %>

            <div class="planCard__head">
              <div class="planNameRow">
                <h3 class="planName"><%= p.name %></h3>

                <% if (!p.isPro) { %>
                  <span class="planMark planMark--artist" aria-hidden="true">
                    <svg viewBox="0 0 24 24">
                      <circle cx="12" cy="12" r="10" fill="var(--purple)"></circle>
                      <path d="M12 7v10M7 12h10" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                  </span>
                <% } else { %>
                  <span class="planMark planMark--pro" aria-hidden="true">
                    <svg viewBox="0 0 24 24">
                      <circle cx="12" cy="12" r="10" fill="var(--gold)"></circle>
                      <path d="m12 6.8 1.7 3.5 3.8.6-2.8 2.7.7 3.8-3.4-1.8-3.4 1.8.7-3.8-2.8-2.7 3.8-.6Z" fill="#fff"/>
                    </svg>
                  </span>
                <% } %>
              </div>

              <p class="planSub"><%= p.subtitle %></p>

              <div class="priceLine">
                <a class="priceMain <%= p.accent === "purple" ? "priceMain--purple" : "" %>" href="#plans" aria-label="<%= p.name %> price">
                  <%= p.priceMain %>
                </a>
                <span class="priceDetail"><%= p.priceDetail %></span>
              </div>

              <button class="ghostCta" type="button">Get started</button>
            </div>

            <div class="planCard__features">
              <% p.features.forEach((f) => { %>
                <% if (f.type === "andmore") { %>
                  <div class="andMore"><%= f.label %></div>
                <% } else { %>
                  <div class="featRow">
                    <div class="featIcon"><%- icons[f.icon] %></div>
                    <div class="featText"><%= f.label %></div>
                    <% if (f.quota) { %>
                      <div class="featQuota <%= p.isPro ? "featQuota--pro" : "featQuota--artist" %>"><%= f.quota %></div>
                    <% } %>
                  </div>
                <% } %>
              <% }); %>
            </div>
          </article>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- COMPARE -->
  <section class="compare" id="compare">
    <div class="wrap">
      <h2 class="compareTitle">Compare features.</h2>

      <div class="compareHeader" role="row">
        <div class="chCell chCell--left"></div>

        <div class="chCell">
          <div class="chName">Basic</div>
          <div class="chSub">Free</div>
          <div class="pill">Current<br/>plan</div>
        </div>

        <div class="chCell">
          <div class="chName">Artist</div>
          <div class="chSub">
            <span class="linkMuted">₫40,000</span><span class="chDim"> /month, billed yearly for ₫480,000</span>
          </div>
          <div class="chLink">Get<br/>started</div>
        </div>

        <div class="chCell">
          <div class="chName">Artist<br/>Pro</div>
          <div class="chSub">
            <span class="linkPro">₫95,000</span><span class="chDim"> /month, billed yearly for ₫1,140,000</span>
          </div>
          <div class="chLink">Get<br/>started</div>
        </div>
      </div>

      <% compare.groups.forEach((g) => { %>
        <% if (g.sectionTitle) { %>
          <div class="minorSectionTitle"><%= g.sectionTitle %></div>
          <div class="thickRule"></div>
        <% } %>

        <% if (g.bigTitle) { %>
          <div class="bigSectionTitle"><%= g.bigTitle %></div>
          <div class="thickRule"></div>
        <% } %>

        <div class="compareGrid">
          <% g.rows.forEach((r) => { %>
            <div class="rowRule"></div>

            <div class="rowLeft">
              <div class="rowTitle"><%= r.title %></div>
              <% if (r.desc) { %><div class="rowDesc"><%= r.desc %></div><% } %>
            </div>

            <div class="rowCell"><%= (typeof r.basic === "string") ? r.basic : "" %></div>

            <div class="rowCell">
              <% if (typeof r.artist === "string") { %>
                <%= r.artist %>
              <% } else if (r.artist && r.artist.type === "check") { %>
                <span class="check <%= r.artist.grey ? "check--grey" : "" %>" aria-label="Included"></span>
              <% } else if (r.artist && r.artist.type === "badge") { %>
                <span class="badge badge--artist">
                  <span class="badgeIcon" aria-hidden="true">
                    <svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" fill="var(--purple)"/><path d="M12 7v10M7 12h10" stroke="#fff" stroke-width="2" stroke-linecap="round"/></svg>
                  </span>
                  <span class="badgeText"><%= r.artist.text %></span>
                </span>
              <% } %>
            </div>

            <div class="rowCell rowCell--pro">
              <% if (typeof r.pro === "string") { %>
                <span class="proVal"><%= r.pro %></span>
              <% } else if (r.pro && r.pro.type === "check") { %>
                <span class="check" aria-label="Included"></span>
              <% } else if (r.pro && r.pro.type === "badge") { %>
                <span class="badge badge--pro">
                  <span class="badgeIcon" aria-hidden="true">
                    <svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" fill="var(--gold)"/><path d="m12 6.8 1.7 3.5 3.8.6-2.8 2.7.7 3.8-3.4-1.8-3.4 1.8.7-3.8-2.8-2.7 3.8-.6Z" fill="#fff"/></svg>
                  </span>
                  <span class="badgeText"><%= r.pro.text %></span>
                </span>
              <% } %>
            </div>
          <% }); %>

          <div class="rowRule rowRule--end"></div>
        </div>
      <% }); %>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="footer" id="footer">
    <div class="wrap">
      <div class="footSigned">
        Signed in as <span class="footName"><%= signedInAs %></span>. <a class="footLink" href="#">Sign out</a>
      </div>

      <div class="footRule"></div>

      <nav class="footLinks" aria-label="Footer links">
        <a href="#">Legal</a>
        <span>-</span>
        <a href="#">Privacy</a>
        <span>-</span>
        <a href="#">Cookies</a>
        <span>-</span>
        <a href="#">Consent Manager</a>
        <span>-</span>
        <a href="#">Imprint</a>
        <span>-</span>
        <a href="#">Help Centre</a>
      </nav>

      <div class="footLang">
        <span class="footMuted">Language:</span>
        <select class="langSelect" aria-label="Language">
          <option selected>English (UK)</option>
        </select>
      </div>
    </div>
  </footer>
</main>

</body>
</html>
