<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body>
  <div class="admin-layout">
    <aside class="sidebar">
      <div class="logo">BẢNG QUẢN TRỊ SAOCLAO</div>
      <nav class="nav">
        <a href="/admin/dashboard" class="nav-item">Bảng điều khiển</a>
        <a href="/admin/tracks" class="nav-item active">Bài nhạc</a>
        <a href="/admin/comments" class="nav-item">Bình luận</a>
        <a href="/" class="nav-item">Quay lại trang chính</a>
      </nav>
      <div class="user-info">
        <div class="user-name"><%= user.name %></div>
        <div class="user-role">Quản trị viên</div>
      </div>
    </aside>

    <main class="content">
      <header class="header">
        <h1>Quản lý bài nhạc</h1>
      </header>

      <div class="filters">
        <a href="/admin/tracks" class="filter-btn <%= currentStatus === 'all' ? 'active' : '' %>">Tất cả</a>
        <a href="/admin/tracks?status=pending" class="filter-btn <%= currentStatus === 'pending' ? 'active' : '' %>">Chờ duyệt</a>
        <a href="/admin/tracks?status=approved" class="filter-btn <%= currentStatus === 'approved' ? 'active' : '' %>">Đã duyệt</a>
        <a href="/admin/tracks?status=rejected" class="filter-btn <%= currentStatus === 'rejected' ? 'active' : '' %>">Từ chối</a>
      </div>

      <div class="table-container">
        <table class="data-table">
          <thead>
            <tr>
              <th>Tiêu đề</th>
              <th>Ca sĩ</th>
              <th>Người đăng</th>
              <th>Trạng thái</th>
              <th>Ngày tạo</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <% if (tracks.length === 0) { %>
              <tr>
                <td colspan="6" class="empty">Không tìm thấy bài nhạc nào</td>
              </tr>
            <% } else { %>
              <% tracks.forEach(track => { %>
                <tr>
                  <td><%= track.title %></td>
                  <td><%= track.artist %></td>
                  <td><%= track.userId.username %></td>
                  <td>
                    <span class="status-badge <%= track.status %>">
                      <% if (track.status === 'approved') { %>Đã duyệt<% } %>
                      <% if (track.status === 'pending') { %>Chờ duyệt<% } %>
                      <% if (track.status === 'rejected') { %>Từ chối<% } %>
                    </span>
                  </td>
                  <td><%= new Date(track.createdAt).toLocaleDateString('vi-VN') %></td>
                  <td>
                    <div class="action-btns">
                      <% if (track.status !== 'approved') { %>
                        <button class="btn-icon approve" onclick="approveTrack('<%= track._id %>')">Duyệt</button>
                      <% } %>
                      <% if (track.status !== 'rejected') { %>
                        <button class="btn-icon reject" onclick="rejectTrack('<%= track._id %>')">Từ chối</button>
                      <% } %>
                      <button class="btn-icon delete" onclick="deleteTrack('<%= track._id %>')">Xóa</button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <script>
    async function approveTrack(id) {
      if (!confirm('Bạn có chắc muốn duyệt bài nhạc này không?')) return;
      try {
        const res = await fetch(`/admin/tracks/${id}/approve`, { method: 'POST' });
        const data = await res.json();
        if (data.success) location.reload();
      } catch (err) {
        alert('Lỗi: ' + err.message);
      }
    }

    async function rejectTrack(id) {
      if (!confirm('Bạn có chắc muốn từ chối bài nhạc này không?')) return;
      try {
        const res = await fetch(`/admin/tracks/${id}/reject`, { method: 'POST' });
        const data = await res.json();
        if (data.success) location.reload();
      } catch (err) {
        alert('Lỗi: ' + err.message);
      }
    }

    async function deleteTrack(id) {
      if (!confirm('Xóa vĩnh viễn bài nhạc này?')) return;
      try {
        const res = await fetch(`/admin/tracks/${id}`, { method: 'DELETE' });
        const data = await res.json();
        if (data.success) location.reload();
      } catch (err) {
        alert('Lỗi: ' + err.message);
      }
    }
  </script>
</body>
</html>
